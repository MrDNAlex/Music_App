<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <LinearLayout
        android:id="@+id/SongBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:background="@drawable/songbarobject"
        android:clickable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/SongImage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:src="@drawable/dfltplayimg">

            </ImageView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginRight="5dp">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/SongName"
                        android:layout_width="fill_parent"
                        android:layout_height="32dp"
                        android:text="Song Name"
                        android:textSize="25dp"
                        android:maxLength="20"
                        >

                    </TextView>

                    <TextView
                        android:id="@+id/SongArtist"
                        android:layout_width="fill_parent"
                        android:layout_height="25dp"
                        android:text="Song Artist"
                        android:textSize="20dp"
                        android:scrollHorizontally="true"
                        android:maxLength="20"
                        >

                    </TextView>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/SongPlaylistRank"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="PR"
                                android:textSize="22.5dp">

                            </TextView>

                            <TextView
                                android:id="@+id/SongUniversalRank"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="UR"
                                android:textSize="22.5dp">

                            </TextView>

                        </LinearLayout>

                        <TextView
                            android:id="@+id/SongLength"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:gravity="center"
                            android:text="10:00"
                            android:textSize="22.5dp">

                        </TextView>

                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>